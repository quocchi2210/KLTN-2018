<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tên người gửi: "
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        />

    <EditText
        android:id="@+id/name_sender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Địa chỉ người gửi: "
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        />

    <EditText
        android:id="@+id/address_sender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Số điện thoại: "
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        />

    <EditText
        android:id="@+id/phone_sender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tên người nhận: "
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        />

    <EditText
        android:id="@+id/name_receiver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Địa chỉ người nhận: "
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        />

    <EditText
        android:id="@+id/address_receiver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Số điện thoại: "
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        />

    <EditText
        android:id="@+id/phone_receiver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mô tả: "
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="COD: "
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        />

    <CheckBox
        android:id="@+id/cb_cod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="COD"
        android:onClick="onCheckboxClicked"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Trọng lượng: "
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        />

    <EditText
        android:id="@+id/weight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Loại dịch vụ: "
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        />

    <Spinner
        android:id="@+id/spinner_service_type"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

</LinearLayout>
</ScrollView>