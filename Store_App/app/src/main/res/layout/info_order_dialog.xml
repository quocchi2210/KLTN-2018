<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorDialog"
    android:layout_marginTop="5dp"
    >

    <TextView
        android:textColor="#c6c7e2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thông tin cửa hàng: "
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        />

    <TextView
        android:textColor="#ffffff"
        android:id="@+id/phone_store"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Điện thoại: 1231231231312313"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:textColor="#ffffff"
        android:id="@+id/address_store"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Địa chỉ: "
        android:layout_marginLeft="70dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:textColor="#c6c7e2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thông tin đơn hàng: "
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:textColor="#ffffff"
        android:id="@+id/bill_of_lading_order_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mã đơn hàng: "
        android:layout_marginLeft="70dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:textColor="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sản phẩm: "
        android:layout_marginLeft="70dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:textColor="#ffffff"
        android:id="@+id/name_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Số lượng: "
        android:layout_marginLeft="90dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:textColor="#ffffff"
        android:id="@+id/number_of_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Số lượng"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:textColor="#ffffff"
        android:id="@+id/receiver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Người nhận:"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:textColor="#ffffff"
        android:id="@+id/phone_receiver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="  Số điện thoại:"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"/>

</LinearLayout>