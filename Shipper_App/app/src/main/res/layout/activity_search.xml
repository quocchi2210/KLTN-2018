<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite">

    <TextView
        android:background="@color/colorBlue"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thông tin cửa hàng: "
        android:layout_marginTop="40dp"
        android:textAlignment="center"
        />

    <TextView
        android:textSize="16dp"
        android:id="@+id/phone_store"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Điện thoại: 1231231231312313"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:textSize="16dp"
        android:id="@+id/address_store"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Địa chỉ: "
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:background="@color/colorBlue"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thông tin đơn hàng: "
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        />

    <TextView
        android:textSize="16dp"
        android:id="@+id/bill_of_lading_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mã đơn hàng: "
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:textSize="16dp"
        android:id="@+id/receiver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Người nhận:"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:textSize="16dp"
        android:id="@+id/phone_receiver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Số điện thoại:"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:textSize="16dp"
        android:id="@+id/address_receiver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Địa chỉ:"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:textSize="16dp"
        android:id="@+id/time_delivery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thời gian giao hàng:"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"/>

</LinearLayout>
