<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


        <TextView
            android:background="@color/colorBlue"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thông tin cửa hàng: "
            android:layout_marginTop="40dp"
            android:textAlignment="center"
            />

        <TextView
            android:textSize="16dp"
            android:id="@+id/phone_store"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Điện thoại: 1231231231312313"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:textSize="16dp"
            android:id="@+id/address_store"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Địa chỉ: "
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"/>

        <TextView
        android:background="@color/colorBlue"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thông tin don hang: "
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        />

        <TextView
            android:textSize="16dp"
            android:id="@+id/bill_of_lading_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mã đơn hàng: "
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:textSize="16dp"
            android:id="@+id/receiver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Người nhận:"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:textSize="16dp"
            android:id="@+id/phone_receiver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Số điện thoại:"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            />

         <TextView
            android:textSize="16dp"
            android:id="@+id/address_receiver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dia chi:"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            />

    <TextView
        android:textSize="16dp"
        android:id="@+id/time_delivery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thoi gian giao hang:"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"/>

    <Button
        android:id="@+id/btn_done"
        android:background="@drawable/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Xac nhan"/>

</LinearLayout>
